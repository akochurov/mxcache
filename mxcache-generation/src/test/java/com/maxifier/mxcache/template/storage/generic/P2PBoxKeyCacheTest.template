    public void testSetDuringDependencyNodeOperations() {
        Object#F#Storage storage = mock(Object#F#Storage.class);

        when(storage.isCalculated(#ETEST#)).thenReturn(false, true);
        when(storage.load(#ETEST#)).thenReturn(#FTEST#);

        #E##F#Calculatable calculatable = mock(#E##F#Calculatable.class);
        MxResource r = mock(MxResource.class);
        when(calculatable.calculate("123", #ETEST#)).thenThrow(new ResourceOccupied(r));

        #E##F#Cache cache = (#E##F#Cache) Wrapping.getFactory(new Signature(Object.class, #f#.class), new Signature(#e#.class, #f#.class), false).
                wrap("123", calculatable, storage, new MutableStatisticsImpl());
        cache.setDependencyNode(DependencyTracker.DUMMY_NODE);

        assert cache.getStatistics().getHits() == 0;
        assert cache.getStatistics().getMisses() == 0;

        assert cache.getOrCreate(#ETEST#) == #FTEST#;

        assert cache.getStatistics().getHits() == 1;
        assert cache.getStatistics().getMisses() == 0;

        verify(storage, times(2)).isCalculated(#ETEST#);
        verify(storage).load(#ETEST#);
        verifyNoMoreInteractions(storage);
        verify(calculatable).calculate("123", #ETEST#);
        verifyNoMoreInteractions(calculatable);
    }

