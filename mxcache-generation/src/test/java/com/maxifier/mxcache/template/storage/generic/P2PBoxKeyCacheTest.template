@Test
public class #E##F#CacheBoxKeyTest {
    private static final #E##F#Calculatable CALCULATABLE = new #E##F#Calculatable() {
        @Override
        public #f# calculate(Object owner, #e# o) {
            assert o == #ETEST#;
            return #FTEST#;
        }
    };

    public void testMiss() {
        Object#F#Storage storage = mock(Object#F#Storage.class);

        when(storage.isCalculated(#ETEST#)).thenReturn(false);
        when(storage.size()).thenReturn(0);

        #E##F#Cache cache = (#E##F#Cache) Wrapping.getFactory(new Signature(Object.class, #f#.class), new Signature(#e#.class, #f#.class), false).
                wrap("123", CALCULATABLE, storage, new MutableStatisticsImpl());
        cache.setDependencyNode(DependencyTracker.DUMMY_NODE);

        assert cache.getSize() == 0;
        assert cache.getStatistics().getHits() == 0;
        assert cache.getStatistics().getMisses() == 0;

        assert cache.getOrCreate(#ETEST#) == #FTEST#;

        assert cache.getStatistics().getHits() == 0;
        assert cache.getStatistics().getMisses() == 1;

        verify(storage).size();
        verify(storage, atLeast(1)).isCalculated(#ETEST#);
        verify(storage).save(#ETEST#, #FTEST#);
        verifyNoMoreInteractions(storage);
    }

