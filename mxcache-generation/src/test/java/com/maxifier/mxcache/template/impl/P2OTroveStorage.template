public class #E#ObjectTroveStorage<T> extends T#E_TROVE#ObjectHashMap<Object> implements #E#ObjectStorage<T> {
    public #E#ObjectTroveStorage() {
    }

    public #E#ObjectTroveStorage(T#E_TROVE#HashingStrategy strategy) {
        super(strategy);        
    }

    @Override
    public Object load(#e# key) {
        Object v = get(#E_TROVE:key#);
        if (v == null) {
            return UNDEFINED;
        }
        if (v == NULL_REPLACEMENT) {
            return null;
        }
        return v;
    }

    @Override
    public void save(#e# key, T value) {
        put(#E_TROVE:key#, value == null ? NULL_REPLACEMENT : value);
    }
}
